<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:background="@drawable/shadow"
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ShowPopup">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f1" />

                <TextView
                    android:id="@+id/set1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/description"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/description"
                    android:layout_marginTop="13dp"
                    android:text="Set A1 for one person"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set1"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="Salad with chicken \nCabbage salad \nHot and sour soup \nSpring rolls"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout"
                android:id="@+id/relativeLayout2"
                android:layout_marginTop="5dp"
                android:onClick="ShowPopup">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f2" />

                <TextView
                    android:id="@+id/set2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_marginTop="13dp"
                    android:text="Set A2 for two persons"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set2"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="Salad with chicken \nCabbage salad \nHot and sour soup \nSpring rolls"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout2"
                android:id="@+id/relativeLayout3"
                android:layout_marginTop="5dp"
                android:onClick="ShowPopup">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f3" />

                <TextView
                    android:id="@+id/set3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_marginTop="13dp"
                    android:text="Set A3 for three persons"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set3"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="Salad with chicken \nCabbage salad \nHot and sour soup \nSpring rolls"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout3"
                android:id="@+id/relativeLayout4"
                android:layout_marginTop="5dp"
                android:onClick="ShowPopup">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f6" />

                <TextView
                    android:id="@+id/set4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_marginTop="13dp"
                    android:text="Set A4 for four persons"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set4"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="Salad with chicken \nCabbage salad \nHot and sour soup \nSpring rolls"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout4"
                android:id="@+id/relativeLayout5"
                android:layout_marginTop="5dp"
                android:onClick="ShowPopup">


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f5" />

                <TextView
                    android:id="@+id/set5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView9"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_marginTop="13dp"
                    android:text="Set A5 for five persons"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set5"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_toRightOf="@+id/imageView7"
                    android:text="Salad with chicken \nCabbage salad \nHot and sour soup \nSpring rolls"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout5"
                android:id="@+id/relativeLayout6"
                android:layout_marginTop="5dp"
                android:onClick="ShowPopup">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/f7" />

                <TextView
                    android:id="@+id/set6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView10"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_marginTop="13dp"
                    android:text="Set A6 for six persons"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/set6"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/imageView8"
                    android:layout_toRightOf="@+id/imageView8"
                    android:text="Salad with chicken \nCabbage salad \nHot and sour soup \nSpring rolls"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>