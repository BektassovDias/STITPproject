<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer_ssd.whattoeat.recommendation_list">

    <ListView
        android:id="@+id/listview"
        style="@style/AppTheme.ActionBar"
        android:layout_width="380dp"
        android:layout_height="520dp"
        android:layout_marginTop="24dp"
        android:cacheColorHint="@color/colorPrimaryDark"
        android:theme="@style/AppTheme.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/material_drawer_background_light"
            android:text="Order"
            android:textColor="@color/cardview_light_background"
            android:onClick="ShowPopupPayRec"/>

        <Button
            android:id="@+id/btnDeliver"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/yello"
            android:text="Deliver"
            android:textColor="@color/cardview_light_background"
            android:onClick="ShowPopupPayRec"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
